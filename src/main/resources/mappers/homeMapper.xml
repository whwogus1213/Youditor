<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.good.mapper.homeMapper">

	<!--
	mybatis-config.xml의 typeAlias에 등록해두지 않았다면
	<select id="selectAccounts" resultType="com.good.dto.AccountsVO" >
		...
	</select>
	이렇게 해야 한다.
	-->
	
	<!-- 새로운 메세지 수 감지 -->
	<select id="newMessageCnt" parameterType="int" resultType="int">
	SELECT
		count(messageId) as count
	FROM
		message
	WHERE
		receiverAccountId = #{accountId}
	    AND
	    receiverView = 1
	    AND
	    read_date IS NULL;
	</select>
	
	<!-- 새로운 팔로워 수 감지 -->
	<select id="newFollowerCnt" parameterType="FollowListVO" resultType="int">
	SELECT
		count(followAccountId) as count
	FROM
		followlist
	WHERE
		reg_date > #{reg_date}
		AND
		followAccountId = #{followAccountId}
	</select>
	
	<!-- 공지 카테고리 가져오기 -->
	<select id="bringNoticeCategory" resultType="NoticeCategoryVO">
	SELECT
		*
	FROM
		noticecategory
	</select>
	
	<!-- 비디오 카테고리 가져오기 -->
	<select id="bringVideoCategory" resultType="VideoCategoryVO">
	SELECT
		*
	FROM
		videocategory
	</select>
	
	<!-- 팁 카테고리 가져오기 -->
	<select id="bringTipCategory" resultType="TipCategoryVO">
	SELECT
		*
	FROM
		tipcategory
	</select>
	
	<!-- 구인구직 카테고리 가져오기 -->
	<select id="bringRecruitCategory" resultType="RecruitCategoryVO">
	SELECT
		*
	FROM
		recruitcategory
	</select>
	
	
	
</mapper>


