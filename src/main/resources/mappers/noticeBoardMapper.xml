<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.good.mapper.noticeBoardMapper">

	<select id="listAll" resultType="NoticeBoardVO">
		SELECT *
		FROM noticeboard
		order by boardId desc
		
	</select>

	<!-- 게시물 조회 -->
	<select id="view" parameterType="int" resultType="NoticeBoardVO">
		select *
		from noticeboard
		where boardId = #{boardId}
	</select>

	<!-- 게시물 총 갯수 구하기 -->
	<select id="count" resultType="int">
		select count(boardId)
		from noticeboard 
	</select>
	
	<!-- 페이징 -->
	<select id="listPage" parameterType="hashMap" resultType="NoticeBoardVO">
		select *
		from noticeboard
		order by boardId desc
		limit #{displayPost}, #{postNum}
	</select>


</mapper>
